{
    "id": "org.kde.kdenlive",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "kdenlive",
    "finish-args": [
        "--share=ipc", 
        "--socket=x11", 
        "--socket=wayland"
    ],

    "modules": [
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF", 
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ],
            "name": "kfilemetadata",
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://github.com/KDE/kfilemetadata/archive/v5.40.0.tar.gz", 
                    "sha256": "a3144f258bdcaf78d141c95b78b81cbe12e8220108d5f2ce4c266247cd804093" 
                } 
            ]
        },
        {
            "name": "gtk2",
            "config-opts": [
                "--disable-man",
                "--with-xinput=xfree"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://git.gnome.org/gtk+",
                    "branch": "gtk-2-24"
                }
            ]
        },
        {
            "name": "mlt",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://github.com/mltframework/mlt/releases/download/v6.4.1/mlt-6.4.1.tar.gz", 
                    "sha256": "d3a992f3e67463e68630cb0b455d408a2a12f4da7a19e46807fa08a79f09b2b6"
                } 
            ]
        },
        {
            "name": "kdenlive",
            "buildsystem": "cmake-ninja",
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://github.com/KDE/kdenlive/archive/v17.11.90.tar.gz",
                    "sha256": "dca684e1b4f4717110f03cee4371b22fb5e4735407d2e554db325aa681405a21" 
                } 
            ]
        }
    ]
}
